# ============================================
# ENVIRONMENT CONFIGURATION - Development
# ============================================

# Application
APP_NAME=Ticket Management System
APP_ENV=development
DEBUG=true
# SECRET_KEY - Not used (using Azure AD tokens, not JWT)
SECRET_KEY=not-used-azure-sso-only
API_VERSION=v1
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# Database - SQLite (Local file-based database)
# Using SQLite for simplicity - no external PostgreSQL needed
# Database file: ticket.db (created automatically in backend folder)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=70070012@PJkabcd

# Supabase API (Alternative connection method)
# Get these from Supabase Dashboard → Settings → API
SUPABASE_URL=https://mejhzlbfiptlcsawplzw.supabase.co
SUPABASE_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Azure AD - SSO Authentication (Microsoft Login)
# Get these from Azure Portal → App Registrations → Ticket Management System
AZURE_CLIENT_ID=YOUR_TICKET_MANAGEMENT_SYSTEM_CLIENT_ID
AZURE_TENANT_ID=YOUR_TICKET_MANAGEMENT_SYSTEM_TENANT_ID

# Email - Fetched via Microsoft Graph API using SSO token
# No password needed - uses Azure AD authentication
EMAIL_FOLDER=INBOX
EMAIL_FETCH_DAYS=1

# ============================================
# LLM Configuration - Simple Dynamic Setup
# ============================================
# Just change provider name and API key - that's it!

# Provider: openai | anthropic | azure | ollama | groq | together | google
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview
LLM_API_KEY=sk-your-api-key-here
LLM_BASE_URL=
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=1000

# ============================================
# DATA SOURCE MODE - Controls tickets2.ts content
# ============================================
# llm: Only LLM-parsed tickets from email processing
# combined: Both dummy tickets + LLM-parsed tickets
# dummy: Only dummy/sample tickets (for development)
DATA_SOURCE_MODE=combined

# Azure OpenAI only (if LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Logging
LOG_LEVEL=DEBUG

# Scheduler
SCHEDULER_ENABLED=true
